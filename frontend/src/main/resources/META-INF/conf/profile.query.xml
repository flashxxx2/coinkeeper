<?xml version='1.0' encoding='UTF-8'?>
<query xmlns="http://n2oapp.net/framework/config/schema/query-4.0"
       object-id="profile">

    <unique>
        <rest>/payments/user</rest>
    </unique>

    <fields>
        <field id="id" domain="long">
            <select mapping="['id']"/>
            <filters>
                <eq filter-id="id"/>
            </filters>
        </field>

        <field id="userName" domain="string">
            <select mapping="['userName']"/>
        </field>
    </fields>
</query>
