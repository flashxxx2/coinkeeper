<?xml version='1.0' encoding='UTF-8'?>
<query xmlns="http://n2oapp.net/framework/config/schema/query-4.0" object-id="facility">

    <list result-mapping="['content']" count-mapping="['totalElements']">
        <rest method="GET"
              filters-separator="&amp;">/facilities/{id}/images</rest>
    </list>

    <fields>
        <field id="id" domain="string">
            <select mapping="['id']"/>
            <filters>
                <eq filter-id="id">id={id}</eq>
            </filters>
        </field>

        <field id="url" domain="string">
            <select mapping="['url']"/>
        </field>

        <field id="name" domain="string">
            <select mapping="['name']"/>
        </field>

        <field id="size" domain="long">
            <select mapping="['size']"
                    normalize="#this != null ? T(org.apache.commons.io.FileUtils).byteCountToDisplaySize(new Long(#this)) : null"/>
        </field>
    </fields>

</query>