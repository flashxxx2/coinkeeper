<query xmlns="http://n2oapp.net/framework/config/schema/query-4.0"
       object-id="payment">
    <unique result-mapping="['content']">
        <rest method="GET"
              filters-separator="&amp;">${frontend.url}/proxy/backend/api/media/{id}</rest>
    </unique>

    <fields>
        <field id="id" domain="long">
            <select mapping="['id']"/>
            <filters>
                <eq filter-id="id">id={id}</eq>
            </filters>
        </field>
        <field id="fileName">
            <select/>
        </field>
        <field id="url">
            <select/>
        </field>
    </fields>
</query>
